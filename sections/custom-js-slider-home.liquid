{% stylesheet %}

#carousel {
    position: relative;
    width: 80%; /* Adjust width as needed */
    max-width: 1200px; /* Optional: Set a maximum width for larger screens */
    overflow: hidden;
    display: flex;
    align-items: center;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    background-color: #89FAD0; /* Example background color */
}

/* Container for carousel items */
.carousel-display {
    position: relative;
    height: 200px;
    width: 100%;
}

/* Carousel wrapper styling for smooth transition */
.carousel-wrapper {
    display: flex;
    transition: transform 0.5s ease;
    align-items: center;
}

/* Carousel items container */
.carousel-items {
    display: flex;
    width: 500%; /* Adjust based on the number of items */
}

/* Item styling */
.carousel-item {
    text-align: center;
    color: white;
    font-size: 40px;
    height: 120px; /* Default size */
    width: 120px;  /* Default size */
    line-height: 120px; /* Default size */
    transition: height 0.5s, width 0.5s, transform 0.5s;
    flex-shrink: 0;
}

/* Enlarged item styling */
.carousel-item.active {
    height: 150px; /* Enlarged size */
    width: 150px;  /* Enlarged size */
    line-height: 150px; /* Enlarged size */
}

/* Arrow button styling */
.carousel-arrow {
    position: absolute;
    width: 30px;
    height: 30px;
    background-color: white;
    text-align: center;
    font-size: 20px;
    border-radius: 50%;
    cursor: pointer;
    color: #228291;
    line-height: 30px;
    z-index: 1000;
}

/* Positioning of arrow buttons */
.carousel-arrow-left {
    left: 10px;
}

.carousel-arrow-right {
    right: 10px;
}

/* Pagination dots styling */
.carousel-pagination {
    text-align: center;
    margin-top: 10px;
}

.carousel-dot {
    display: inline-block;
    width: 12px;
    height: 12px;
    background-color: #ddd;
    border-radius: 50%;
    margin: 0 5px;
    cursor: pointer;
    transition: background-color 0.3s;
}

/* Active dot styling */
.carousel-dot.active {
    background-color: #4EC9E1;
}

/* Prevent text selection */
.noselect {
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
}



{% endstylesheet %}

<script>
 $(document).ready(function() {
    const items = $('.carousel-item');
    const dots = $('.carousel-dot');
    let activeIndex = 2; // Start with the middle item

    function updateCarousel() {
        items.each(function() {
            const index = $(this).data('index');
            $(this).removeClass('active');

            if (index === activeIndex) {
                $(this).addClass('active');
            }
        });

        // Center the carousel
        const itemWidth = $('.carousel-item').outerWidth();
        const offset = -((activeIndex - 1) * itemWidth) + 'px';
        $('.carousel-wrapper').css('transform', `translateX(${offset})`);

        // Update dots
        dots.removeClass('active');
        dots.eq(activeIndex).addClass('active');
    }

    function moveLeft() {
        activeIndex = (activeIndex - 1 + items.length) % items.length;
        updateCarousel();
    }

    function moveRight() {
        activeIndex = (activeIndex + 1) % items.length;
        updateCarousel();
    }

    function goToIndex(index) {
        activeIndex = index;
        updateCarousel();
    }

    $('.carousel-arrow-left').click(moveLeft);
    $('.carousel-arrow-right').click(moveRight);

    dots.click(function() {
        goToIndex($(this).data('index'));
    });

    updateCarousel(); // Initial setup
});


</script>




